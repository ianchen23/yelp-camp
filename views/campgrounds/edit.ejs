<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= camp.name %></h1> <!--remove style-->
        <div style="width: 30%; margin: 40px auto;"> <!--remove style-->
            <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= camp.name %>" name="newCamp[name]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" value="<%= camp.price %>" name="newCamp[price]" min="0.00" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= camp.image %>" name="newCamp[image]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= camp.description %>" name="newCamp[description]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>