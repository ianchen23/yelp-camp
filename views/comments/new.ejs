<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add New Comment to <%=camp.name%></h1> <!--remove style-->
        <div style="width: 30%; margin: 40px auto;"> <!--remove style-->
            <form action="/campgrounds/<%=camp._id%>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="comment" name="commentText">
